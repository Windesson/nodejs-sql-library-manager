extends ../layout

block content
  h1 Books

  form(action="/books/", method="get", class="search-form")
    input(type="text", name="search", placeholder="feeling lucky", value=`${search? search : ''}`) 
    button(type="submit", class="search-button") search 

  p
   a(href="/books/new", class="button") Create New Book

  table
    thead
      tr
       th Title
       th Author
       th Genre
       th Year
    tbody
      each book in books
        tr
          td 
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year